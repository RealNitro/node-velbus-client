html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title Velbus client
    link(href='/vendor/css/bootstrap.min.css', rel='stylesheet')

  body
    div.page-header
      h1 Velbus client

    ol.breadcrumb
      li.active Home

    ul.list-group
    each room, link in rooms
      li.list-group-item
        span.badge #{room.components.length}
        a(href=link)= room.name

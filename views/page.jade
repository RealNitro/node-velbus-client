html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title Velbus client
    link(href='/vendor/css/bootstrap.min.css', rel='stylesheet')
    link(href='/vendor/css/bootstrap-slider.min.css', rel='stylesheet')
    link(href='/vendor/css/bootstrap-toggle.min.css', rel='stylesheet')

  body
    div.page-header
      h1 Velbus client

    ol.breadcrumb
      each breadcrumb, index in breadcrumbs
        if !(index == breadcrumbs.length -1)
          li
            a(href=breadcrumb.url) !{breadcrumb.name}
        else
          li.active !{breadcrumb.name}

    ul.list-group
    each room, link in object
      li.list-group-item
        if room.components
          span.badge #{room.components.length}
        a(href=breadcrumbs[breadcrumbs.length - 1].url + (breadcrumbs.length > 1 ? '/' : '') + link)= room.name

    if object.components
      each component in object.components
        div.panel.panel-default
          div.panel-heading !{component.name}
          div.panel-body
            div.velbus(
              data-module=component.module
              data-address=component.address
              data-channel=component.channel
              data-speed=component.speed
            )

    script(src='/vendor/js/jquery.min.js' type='text/javascript')
    script(src='/vendor/js/bootstrap.min.js' type='text/javascript')
    script(src='/vendor/js/bootstrap-slider.min.js' type='text/javascript')
    script(src='/vendor/js/bootstrap-toggle.min.js' type='text/javascript')
    script(src='/vendor/js/bootbox.min.js' type='text/javascript')
    script(src='/js/config.js' type='text/javascript')
    script(src='/js/app.min.js' type='text/javascript')
